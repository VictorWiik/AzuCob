# =================================
# AzuCob Backend - Environment Variables
# =================================

# Server
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/azucob?schema=public

# JWT Security
JWT_SECRET=your_super_secret_jwt_key_here_32_chars
JWT_EXPIRES_IN=1d

# Encryption (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# =================================
# GestãoClick API
# =================================
GESTAOCLICK_API_URL=https://api.gestaoclick.com.br/v1
GESTAOCLICK_ACCESS_TOKEN=your_access_token
GESTAOCLICK_SECRET_ACCESS=your_secret_access

# =================================
# Efí Bank API
# =================================
EFI_CLIENT_ID=your_efi_client_id
EFI_CLIENT_SECRET=your_efi_client_secret
EFI_SANDBOX=true
EFI_API_URL=https://apis-h.efipay.com.br
EFI_CERTIFICATE_PATH=./certs/efi_cert.p12

# =================================
# Resend Email API
# =================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_NAME=AzuCob
RESEND_FROM_EMAIL=cobranca@azuton.com

# =================================
# Frontend
# =================================
FRONTEND_URL=http://localhost:5173

# =================================
# Cron Schedules
# =================================
SYNC_GESTAOCLICK_CRON=0 6 * * *
SYNC_EFI_CRON=0 */4 * * *
SEND_CHARGES_CRON=0 9 * * 1-5
