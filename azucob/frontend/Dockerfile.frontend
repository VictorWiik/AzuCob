FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Use npm install (not ci)
RUN npm install

# Copy source
COPY . .

# Build arg for API URL
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# Build
RUN npm run build

# Install serve
RUN npm install -g serve

# Expose port
EXPOSE 3000

# Start
CMD ["serve", "dist", "-s", "-l", "3000"]
