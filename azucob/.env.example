# ==============================================
# AzuCob - Variáveis de Ambiente (Docker)
# ==============================================
# Copie este arquivo para .env na raiz do projeto
# Use com: docker-compose -f docker-compose.prod.yml up -d

# ----------------
# PostgreSQL
# ----------------
POSTGRES_USER=azucob
POSTGRES_PASSWORD=sua_senha_postgres_forte
POSTGRES_DB=azucob

# ----------------
# Segurança
# ----------------
JWT_SECRET=sua_chave_jwt_super_secreta_minimo_32_caracteres
ENCRYPTION_KEY=chave_32_caracteres_exatamente!!

# ----------------
# GestãoClick API
# ----------------
GESTAOCLICK_ACCESS_TOKEN=seu_access_token
GESTAOCLICK_SECRET_ACCESS=seu_secret_access

# ----------------
# Banco Efí
# ----------------
EFI_CLIENT_ID=seu_client_id
EFI_CLIENT_SECRET=seu_client_secret
EFI_CERTIFICATE_PATH=/app/certs/producao.p12
EFI_SANDBOX=false

# ----------------
# Resend (Email)
# ----------------
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_NAME=AzuCob
RESEND_FROM_EMAIL=cobranca@seudominio.com
